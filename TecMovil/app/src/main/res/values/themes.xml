<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.TallerMiauMovil" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Color Primiario -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Color Secundario -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.TallerMiauMovil.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TallerMiauMovil.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TallerMiauMovil.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>